@model CarListViewModel
<div class="site-section my-5">
<main id="main">
    <section id="hero" class="clearfix">
        <div class="container d-flex justify-content-center mt-50 mb-50">
            <div class="row">
                @foreach (var item in Model.Cars)
                {
                    <div class="col-md-10">
                        <div class="card card-body">
                            <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                                <div class="mr-2 mb-3 mb-lg-0">
                                    <img src="https://avatars.githubusercontent.com/u/10639145?s=200&v=4" width="150" height="150" alt="">
                                </div>
                                <div class="media-body">
                                    <h6 class="media-title font-weight-semibold">
                                        <a href="#" data-abc="true">@item.carName</a>
                                    </h6>
                                    <ul class="list-inline list-inline-dotted mb-0">
                                        <li class="list-inline-item fw-bold">All items here</li>
                                        <li class="list-inline-item fw-bold">Sepetinize Ekleyin</li>
                                    </ul>
                                </div>
                                <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                    <h3 class="mb-0 font-weight-semibold">$@item.Price</h3>

                                    <div>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="text-muted">1985 reviews</div>
                                    <a type="button" class="btn btn-warning mt-4 text-white" asp-controller="Card" asp-action="AddToCard" asp-route-carId="@item.carId"><i class="icon-cart-add mr-2"></i> Add to card</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>
</div>