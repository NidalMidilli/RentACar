@model CardListViewModel

<div class="site-section my-5">
        <div class="container">
            <div class="row pt-5">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-info" role="alert">@TempData["message"]</div>
                }
                @if (Model.Card.CardLines.Count > 0 && Model.Card.CardLines.Count != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>PICTURE</th>
                                <th class="fw-bold" scope="col">Car Name</th>
                                <th class="fw-bold" scope="col">Price</th>
                                <th class="fw-bold" scope="col">Quantity</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Card.CardLines)
                            {
                                <tr>
                                    <td><img src="https://images1.the-dots.com/4462989/120721-thedots-icon.png?p=squareContained" width="100" height="100" /></td>
                                    <td class="fw-bold">@item.Car.carName</td>
                                    <td class="fw-bold">@item.Car.Price</td>
                                    <td class="fw-bold">@item.Quantity</td>
                                    <td class="fw-bold"><a class="btn btn-xs btn-danger" asp-controller="Card" asp-action="Remove" asp-route-carId="@item.Car.carId">Sil</a></td>
                                </tr>
                            }
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><h3>Total</h3></td>
                                <td>
                                    <h3>@Model.Card.Total</h3>
                                </td>
                            </tr>

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>

                                <td>

                                    <a asp-controller="Car" asp-action="Index" class="btn btn-xs btn-primary">
                                        <span>Alışverişe Devam Et</span>
                                    </a>
                                </td>

                                <td>
                                    <a asp-controller="Card" asp-action="Complete" class="btn btn-xs btn-success">
                                        <span>Ödemeye Git</span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="col-lg-12">
                        <div class="alert alert-warning  text-center " role="alert">
                            Ürün Bulunamadı!
                        </div>
                    </div>
                }
            </div>
        </div>
        </div>